{
 "AWSEBGDockerrunVersion": 2,
 "containerDefinitions": [
   {
    "name": "client",
    "image": "joerajeev/docker-multi-container-demo-client",
    "hostname": "client",
    "essential": false,
    "memory": 128 
   },
   {
    "name": "server",
    "image": "joerajeev/docker-multi-container-demo-server",
    "hostname": "api",
    "essential": false,
    "memory": 128
   },
   {
    "name": "worker",
    "image": "joerajeev/docker-multi-container-demo-worker",
    "hostname": "worker",
    "essential": false,
    "memory": 128
   },
   {
    "name": "nginx",
    "image": "joerajeev/docker-multi-container-demo-nginx",
    "essential": true,
    "portMappings": [
      {
       "hostPort": 80,
       "containerPort": 80
      }
    ],
    "links": ["client", "server"],
    "memory": 128 
   }
 ]
}

